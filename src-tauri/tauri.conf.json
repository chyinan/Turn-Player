{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "turn-player-app",
  "version": "0.1.0",
  "identifier": "com.turn-player-app.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Turn Player - Select Music",
        "width": 800,
        "height": 600
      },
      {
        "label": "player",
        "title": "Turn Player",
        "url": "player.html",
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"],
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    }
  },
  "plugins": {
    "log": null,
    "dialog": null,
    "shell": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
